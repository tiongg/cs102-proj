<?xml version="1.0" encoding="UTF-8"?>

<?import g1t1.components.session.AttendanceStateList?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="750.0" prefWidth="1440.0"
            xmlns="http://javafx.com/javafx/17.0.12" fx:controller="g1t1.scenes.DuringSessionViewController">

    <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="350.0"
               AnchorPane.topAnchor="0.0">
        <ImageView fx:id="ivCameraView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="350.0" AnchorPane.topAnchor="0.0"/>
        <!-- Error label overlaid at bottom -->
        <Label fx:id="lblCameraError" styleClass="bg-error-danger"
               text="Camera Error!" textFill="white" translateZ="-99.0" viewOrder="-10" visible="false"
               StackPane.alignment="BOTTOM_CENTER">
            <StackPane.margin>
                <Insets bottom="64.0"/>
            </StackPane.margin>
        </Label>

        <HBox fx:id="hbxConfirmStudent" alignment="CENTER" maxHeight="48.0" maxWidth="400.0" prefHeight="48.0"
              prefWidth="400.0" spacing="24.0" styleClass="status-button-confirm"
              StackPane.alignment="BOTTOM_CENTER">
            <Label fx:id="lblConfirmStudentName" text="Needs confirmation: J" textFill="WHITE">
                <font>
                    <Font name="Inter Semi Bold" size="18.0"/>
                </font>
            </Label>

            <HBox alignment="CENTER" fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                  minWidth="-Infinity" prefHeight="30.0" prefWidth="30.0" styleClass="status-button-accept"
                  HBox.hgrow="NEVER" onMouseClicked="#acceptStudentAttendance">
                <FontIcon iconLiteral="ion4-ios-checkmark" iconSize="18" iconColor="white"/>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                  minWidth="-Infinity" prefHeight="30.0" prefWidth="30.0" styleClass="status-button-reject"
                  HBox.hgrow="NEVER" onMouseClicked="#rejectStudentAttendance">
                <FontIcon iconLiteral="ion4-ios-close" iconSize="18" iconColor="white"/>
            </HBox>
            <StackPane.margin>
                <Insets bottom="128.0"/>
            </StackPane.margin>
        </HBox>
    </StackPane>

    <VBox fx:id="vbxDefaultPanel" alignment="TOP_CENTER" prefWidth="350" spacing="8"
          styleClass="panel" AnchorPane.bottomAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label alignment="CENTER" prefHeight="64.0" prefWidth="350.0" text="Currently Marking" textAlignment="CENTER">
            <font>
                <Font name="Inter Semi Bold" size="26.0"/>
            </font>
        </Label>

        <HBox alignment="TOP_CENTER" spacing="4">
            <Label fx:id="lblModule" alignment="CENTER_RIGHT" prefWidth="200.0" text="CS 102" textAlignment="RIGHT"/>
            <Label text="-"/>
            <Label fx:id="lblSection" prefWidth="200.0" text="G1"/>
        </HBox>

        <HBox alignment="TOP_CENTER" spacing="4">
            <Label fx:id="lblWeek" alignment="CENTER_RIGHT" prefWidth="200.0" text="Week 8"/>
            <Label text="-"/>
            <Label fx:id="lblTimeStart" prefWidth="200.0" text="08:00"/>
        </HBox>

        <HBox alignment="TOP_CENTER" spacing="4">
            <Label alignment="CENTER_RIGHT" prefWidth="200.0" text="Remaining"/>
            <Label text=":"/>
            <Label fx:id="lblRemainingTime" prefWidth="200.0" text="5 mins"/>
        </HBox>

        <HBox alignment="TOP_CENTER" spacing="4">
            <Label alignment="CENTER_RIGHT" prefWidth="200.0" text="Present:"/>
            <Label text=":"/>
            <Label fx:id="lblPresent" prefWidth="200.0" text="15 / 20"/>
        </HBox>

        <VBox alignment="TOP_CENTER" minHeight="-Infinity" prefHeight="200.0" spacing="4">
            <AttendanceStateList fx:id="aslRecent" alignment="TOP_CENTER" fillWidth="false" title="Recently marked"/>
        </VBox>

        <!-- Height needed for it to resize? -->
        <VBox alignment="TOP_CENTER" prefHeight="50.0" spacing="4" VBox.vgrow="ALWAYS">
            <AttendanceStateList fx:id="aslStudents" alignment="TOP_CENTER" title="Students" VBox.vgrow="ALWAYS"/>
        </VBox>

        <HBox alignment="CENTER" spacing="4">
            <Button fx:id="btnAdminPanel" onMouseClicked="#toggleAdminPanel" styleClass="flat-input"
                    text="Enter Admin view">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </HBox>
        <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0"/>
        </padding>
    </VBox>

    <VBox fx:id="vbxAdminPanel" alignment="TOP_CENTER" prefWidth="350" spacing="8"
          styleClass="panel" AnchorPane.bottomAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="TOP_CENTER" prefHeight="50.0" spacing="4" VBox.vgrow="ALWAYS">
            <AttendanceStateList fx:id="aslMarkableStudents" alignment="TOP_CENTER" editable="true" title="Students"
                                 VBox.vgrow="ALWAYS"/>
        </VBox>
        <HBox alignment="CENTER" spacing="4">
            <Button onMouseClicked="#stopSession" styleClass="flat-input" text="End session">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </HBox>
        <HBox alignment="CENTER" spacing="4">
            <Button onMouseClicked="#toggleAdminPanel" styleClass="flat-input" text="Exit Admin view">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </HBox>
        <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0"/>
        </padding>
    </VBox>
</AnchorPane>
