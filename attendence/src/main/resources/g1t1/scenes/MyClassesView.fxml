<?xml version="1.0" encoding="UTF-8"?>

<?import g1t1.components.Navbar?>
<?import g1t1.components.table.Table?>
<?import g1t1.components.TimePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="700.0" prefWidth="900.0"
           xmlns="http://javafx.com/javafx/17.0.12" fx:controller="g1t1.scenes.MyClassesViewController">

    <AnchorPane>
        <Navbar/>
        <AnchorPane layoutX="250.0" prefHeight="900.0" prefWidth="Infinity" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <Label text="My Classes" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="32.0"
                   StackPane.alignment="TOP_LEFT">
                <font>
                    <Font name="Inter Semi Bold" size="26.0"/>
                </font>
                <StackPane.margin>
                    <Insets bottom="32.0" left="32.0" right="32.0" top="40.0"/>
                </StackPane.margin>
            </Label>

            <VBox spacing="20" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0"
                  AnchorPane.topAnchor="90.0">
                <HBox alignment="CENTER_LEFT" minHeight="40.0">
                    <Label text="Available Classes" HBox.hgrow="ALWAYS">
                        <font>
                            <Font name="Inter Semi Bold" size="18.0"/>
                        </font>
                    </Label>
                    <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                        <HBox alignment="CENTER" onMouseClicked="#openAddClass" spacing="8.0" styleClass="flat-button">
                            <FontIcon iconLiteral="ion4-ios-add-circle-outline" iconSize="18"/>
                            <Label text="Add class"/>
                            <padding>
                                <Insets left="12.0" right="12.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets bottom="4.0" top="4.0"/>
                            </HBox.margin>
                        </HBox>
                    </HBox>
                </HBox>

                <Table fx:id="classesTable" VBox.vgrow="ALWAYS"/>
            </VBox>
        </AnchorPane>
    </AnchorPane>

    <StackPane fx:id="addClassOverlay" style="-fx-background-color: rgba(0,0,0,0.35);" visible="false">
        <VBox alignment="CENTER_LEFT" maxHeight="400" maxWidth="700" spacing="12"
              style="-fx-background-color: #dddddd; -fx-background-radius: 20; -fx-padding: 24;">
            <Label text="Create new class">
                <font>
                    <Font name="Inter Semi Bold" size="20"/>
                </font>
            </Label>

            <GridPane hgap="12" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="15"/>
                    <ColumnConstraints percentWidth="35"/>
                    <ColumnConstraints percentWidth="15"/>
                    <ColumnConstraints percentWidth="35"/>
                </columnConstraints>

                <Label text="Module Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="tfModule" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Section:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="tfSection" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Term:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="tfTerm" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Day of Week:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <MenuButton fx:id="mbDay" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <Label text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TimePicker fx:id="tfStart" GridPane.columnIndex="1" GridPane.rowIndex="2"/>


                <Label text="End Time:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <TimePicker fx:id="tfEnd" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                <Label text="Room:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="tfRoom" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button onAction="#closeAddClass" style="-fx-background-color: transparent; -fx-text-fill: black;"
                        text="Cancel"/>
                <Button onAction="#createClass"
                        style="-fx-background-color: black; -fx-text-fill: white; -fx-background-radius: 20;"
                        text="Create"/>
            </HBox>
        </VBox>
    </StackPane>
</StackPane>
