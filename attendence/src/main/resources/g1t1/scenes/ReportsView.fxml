<?xml version="1.0" encoding="UTF-8"?>

<?import g1t1.components.Navbar?>
<?import g1t1.components.table.Table?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="900.0" prefWidth="1440.0"
            xmlns="http://javafx.com/javafx/17.0.12" fx:controller="g1t1.scenes.ReportsViewController">
    <Navbar/>
    <AnchorPane layoutX="250.0" prefHeight="900.0" prefWidth="818.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="16" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0"
              AnchorPane.topAnchor="32.0">
            <Label fx:id="pastReports" text="Past Reports">
                <font>
                    <Font name="Inter Semi Bold" size="26.0"/>
                </font>
            </Label>

            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Button fx:id="reportsBackBtn" minWidth="100.0" onAction="#reportsBack" styleClass="button-cancel"
                        text="Back"/>
            </HBox>
        </HBox>

        <!-- Reports Table Section -->
        <VBox spacing="16" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0"
              AnchorPane.topAnchor="90.0">
            <!-- Table Header -->
            <HBox alignment="CENTER_LEFT" minHeight="40.0" spacing="12">
                <Label fx:id="allPastReports" text="All Past Reports">
                    <font>
                        <Font name="Inter Semi Bold" size="16.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT" maxHeight="40" HBox.hgrow="ALWAYS">
                    <HBox alignment="CENTER" onMouseClicked="#search" spacing="8.0" styleClass="flat-button"
                          visible="false">
                        <FontIcon iconLiteral="gmi-search" iconSize="18"/>
                        <Label text="Search"/>
                        <padding>
                            <Insets left="12.0" right="12.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="4.0" top="4.0"/>
                        </HBox.margin>
                    </HBox>
                </HBox>
            </HBox>

            <!-- Reports Table -->
            <Table fx:id="reportsTable" VBox.vgrow="ALWAYS" emptyMessage="No reports!"
                   emptyMessageDescription="Start a session, and access the past reports here!"/>
        </VBox>

        <!-- Export Options Footer -->
        <HBox fx:id="footerBar" alignment="CENTER_LEFT" prefHeight="80.0" spacing="20" styleClass="footer-bar"
              visible="false" AnchorPane.bottomAnchor="24.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">

            <!-- Format Selection -->
            <VBox spacing="4" alignment="CENTER_LEFT">
                <Label text="Export Format" styleClass="filter-section-label"/>
                <MenuButton fx:id="formatBtn" minWidth="150" styleClass="flat-input" text="PDF" visible="false">
                    <items>
                        <MenuItem onAction="#choosePdf" text="PDF"/>
                        <MenuItem onAction="#chooseCsv" text="CSV"/>
                        <MenuItem onAction="#chooseXlsx" text="XLSX"/>
                    </items>
                </MenuButton>
            </VBox>

            <!-- Export Options -->
            <VBox spacing="4" alignment="CENTER_LEFT" fx:id="vbExportOptions">
                <Label text="Include Additional Fields" styleClass="filter-section-label"/>
                <HBox spacing="12">
                    <CheckBox fx:id="cbTimestamp" text="Timestamp"/>
                    <CheckBox fx:id="cbConfidence" text="Confidence"/>
                    <CheckBox fx:id="cbMethod" text="Method"/>
                </HBox>
            </VBox>

            <!-- Directory picker -->
            <VBox spacing="4" alignment="CENTER_LEFT">
                <Label text="Save Location" styleClass="filter-section-label"/>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label fx:id="statusLabel" text="no directory selected" HBox.hgrow="ALWAYS"/>
                    <Button onAction="#onChoose" styleClass="button-cancel" text="Choose..."/>
                </HBox>
            </VBox>

            <!-- Spacer to push Export button to the right -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Export Button -->
            <Button fx:id="exportBtn" minWidth="100" onAction="#export" styleClass="button-primary" text="Export" visible="false"/>
        </HBox>


    </AnchorPane>

</AnchorPane>
