<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import g1t1.components.Navbar?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="g1t1.scenes.SettingsViewController"
            prefHeight="900.0" prefWidth="1440.0">
    <Navbar/>
    <AnchorPane layoutX="250.0" prefHeight="900.0" prefWidth="818.0" 
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="250.0" 
                AnchorPane.rightAnchor="0.0" 
                AnchorPane.topAnchor="0.0">
        
        <Label text="Settings" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="32.0">
            <font>
                <Font name="Inter Semi Bold" size="26.0"/>
            </font>
        </Label>

        <!-- Center the form with consistent spacing -->
        <VBox spacing="30.0" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="100.0" 
              AnchorPane.rightAnchor="200.0" maxWidth="900.0">
            
            <!-- Detection Threshold -->
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="50.0"/>
                </columnConstraints>
                
                <Label text="Detection Threshold" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="tfDetectionThreshold" promptText="70" 
                          GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="%%" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
            </GridPane>

            <!-- Late Threshold -->
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="50.0"/>
                </columnConstraints>
                
                <Label text="Late Threshold" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="tfLateThreshold" promptText="15" 
                          GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="mins" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
            </GridPane>

            <!-- Camera Device with Detect Button -->
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="300.0"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="150.0"/>
                </columnConstraints>
                
                <Label text="Camera Device" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cbCameraDevice" promptText="Select camera..." 
                         maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Button fx:id="btnDetectCameras" text="Detect Cameras" onAction="#detectCameras" 
                        prefHeight="30.0" maxWidth="Infinity"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"
                        GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="12.0"/>
                    </font>
                </Button>
            </GridPane>

            <!-- Log Path -->
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="50.0"/>
                </columnConstraints>
                
                <Label text="Log Path" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="tfLogPath" promptText="logs/" 
                          GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Region GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            </GridPane>

            <!-- Save Button -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <padding>
                    <Insets top="20.0"/>
                </padding>
                <Region prefWidth="180.0"/>
                <Button fx:id="btnSave" text="Save Settings" onAction="#saveSettings" 
                        prefWidth="200.0" prefHeight="40.0">
                    <font>
                        <Font name="Inter Semi Bold" size="14.0"/>
                    </font>
                </Button>
            </HBox>

        </VBox>

    </AnchorPane>
</AnchorPane>
