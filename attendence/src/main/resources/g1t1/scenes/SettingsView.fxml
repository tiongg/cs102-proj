<?xml version="1.0" encoding="UTF-8"?>

<?import g1t1.components.Navbar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.ToggleSwitch?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="900.0" prefWidth="1440.0"
            xmlns="http://javafx.com/javafx/17.0.12" fx:controller="g1t1.scenes.SettingsViewController">
    <Navbar/>
    <AnchorPane layoutX="250.0" prefHeight="900.0" prefWidth="818.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <Label text="Settings" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="32.0">
            <font>
                <Font name="Inter Semi Bold" size="26.0"/>
            </font>
        </Label>

        <!-- Center the form with consistent spacing -->
        <VBox maxWidth="900.0" spacing="30.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="40.0"
              AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="100.0">

            <!-- Detection Threshold -->
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="50.0"/>
                </columnConstraints>

                <Label text="Detection Threshold" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="tfDetectionThreshold" promptText="60" styleClass="flat-input" GridPane.columnIndex="1"
                           GridPane.rowIndex="0"/>
                <Label text="\%" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <!-- Auto mark Threshold -->
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="50.0"/>
                </columnConstraints>

                <Label text="Auto mark Threshold" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="tfAutomarkThreshold" promptText="70" styleClass="flat-input" GridPane.columnIndex="1"
                           GridPane.rowIndex="0"/>
                <Label text="\%" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <!-- Late Threshold -->
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="50.0"/>
                </columnConstraints>

                <Label text="Late Threshold" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="tfLateThreshold" promptText="15" styleClass="flat-input" GridPane.columnIndex="1"
                           GridPane.rowIndex="0"/>
                <Label text="mins" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <!-- Camera Device with Detect Button -->
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="300.0"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="150.0"/>
                </columnConstraints>

                <Label text="Camera Device" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cbCameraDevice" maxWidth="Infinity" promptText="Select camera..."
                          styleClass="flat-input" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Button fx:id="btnDetectCameras" maxWidth="Infinity" onAction="#detectCameras" prefHeight="30.0"
                        styleClass="button-camera" text="Detect Cameras" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="12.0"/>
                    </font>
                </Button>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <!-- Log Path -->
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="150.0"/>
                </columnConstraints>

                <Label text="Log Path" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="tfLogPath" promptText="logs/" styleClass="flat-input" GridPane.columnIndex="1"
                           GridPane.rowIndex="0" editable="false"/>
                <Button fx:id="btnChooseLogPath" maxWidth="Infinity" onAction="#chooseLogPath" prefHeight="30.0"
                        styleClass="flat-button" text="Browse..." GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="12.0"/>
                    </font>
                </Button>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <!-- Liveness Enabled -->
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="50.0"/>
                </columnConstraints>

                <Label text="Liveness enabled" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Inter" size="14.0"/>
                    </font>
                </Label>
                <ToggleSwitch fx:id="tsLivenessEnabled" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Region GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <!-- Save Button -->
            <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
                <padding>
                    <Insets top="20.0"/>
                </padding>
                <Button alignment="CENTER" onAction="#saveSettings" prefHeight="40.0" prefWidth="200.0"
                        styleClass="flat-button" text="Save Settings">
                    <font>
                        <Font name="Inter Semi Bold" size="14.0"/>
                    </font>
                </Button>
            </HBox>

            <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER" fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity"
                      onMouseClicked="#logout" prefHeight="40.0" prefWidth="200.0" spacing="16" styleClass="flat-button"
                      HBox.hgrow="NEVER">
                    <Label alignment="CENTER" text="Logout">
                        <font>
                            <Font name="Inter Semi Bold" size="14.0"/>
                        </font>
                    </Label>
                    <FontIcon iconLiteral="gmi-logout" iconSize="14"/>
                </HBox>
            </HBox>

        </VBox>

    </AnchorPane>
</AnchorPane>
